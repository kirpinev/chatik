.list-navigation__button
  align-items center

  display flex
  width 100%
  height 22px
  margin-right 5px
  padding 0
  box-sizing border-box

  font normal 600 13px/13px Arial, sans-serif
  color #9590a0
  background none

  transition all 0.2s ease-in-out

  &:last-of-type
    margin-right 0

  &:hover
    opacity 0.8
