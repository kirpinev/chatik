.form__input
  box-sizing border-box
  width 100%
  height 35px
  margin-bottom 0
  padding 0

  font normal 600 20px/32px Arial, sans-serif
  letter-spacing -0.56px
  color #9590a0

  background #17151c
  border none
  border-bottom 2px solid transparent
  outline none

  transition all 0.2s linear


  &::placeholder
    font normal normal 20px/32px Arial, sans-serif
    letter-spacing 0.22px
    color #7a7585

  &:focus
    border-bottom 2px solid #76a9ff

  &:hover
    border-bottom 2px solid #76a9ff
