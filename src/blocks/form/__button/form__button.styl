.form__button
  box-sizing border-box
  width 100%
  height 40px
  padding-bottom 5px

  font normal bold 24px/36px Arial, sans-serif
  text-align center
  color #000000

  background-color #76a9ff
  border-radius 10px

  transition all 0.2s ease-in-out

  &:disabled
    color #b6bcbf

    background-color #e6e8eb
    box-shadow none
