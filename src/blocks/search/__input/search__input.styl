.search__input
  box-sizing border-box
  width 100%
  height 32px
  padding 0 27px 0 40px

  font normal 400 13px/24px Arial, sans-serif
  letter-spacing 0.12px
  color #7a7585

  border-radius 10px
  background #17151c
  border 2px solid transparent
  outline none

  transition all 0.2s ease-in-out

  &::placeholder
    font normal 400 13px/24px Arial, sans-serif
    letter-spacing 0.12px
    color #7a7585

  &:focus
    border-color #76a9ff
